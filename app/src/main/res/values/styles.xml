<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="WearableTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowBackground">@drawable/all_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="numberPickerStyle">@style/NPWidget.Holo.Light.NumberPicker</item>
    </style>

    <style name="Picker">
        <item name="android:layout">@layout/picker</item>
    </style>

    <style name="DiskDialogBackgroundStyle">
        <item name="android:layout_width">320dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:minWidth">320dip</item>
        <item name="android:layout_marginLeft">14dip</item>
        <item name="android:layout_marginRight">14dip</item>
        <item name="android:padding">20dip</item>
    </style>

    <style name="DrawerReminder">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="DrawerReminder.Head">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="DrawerReminder.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DrawerReminder.Content">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DrawerReminder.Comment">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppFont" parent="DrawerReminder"/>
    <style name="AppFont.Nil">
        <item name="android:textSize">10dp</item>
    </style>
    <style name="AppFont.Small">
        <item name="android:textSize">14dp</item>
    </style>
    <style name="AppFont.Normal">
        <item name="android:textSize">18dp</item>
    </style>
    <style name="AppFont.Large">
        <item name="android:textSize">22dp</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:track">@drawable/switch_track_holo_dark_jrd</item>
        <item name="android:thumb">@drawable/switch_inner_holo_dark_jrd</item>
        <item name="android:textOn">@string/switch_a_space</item>
        <item name="android:textOff">@string/switch_a_space</item>
        <item name="android:thumbTextPadding">12dip</item>
        <item name="android:switchMinWidth">60dip</item>
        <item name="android:switchPadding">16dip</item>
    </style>

    <!-- Clock Alarm -->
    <style name="medium_light">
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="alarm_label">
        <item name="android:textSize">@dimen/alarm_label_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="alarm_label_not_caps" parent="alarm_label">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="alarm_label_bold" parent="alarm_label">
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="goal_font_bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="body">
        <item name="android:textSize">@dimen/body_font_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    <style name="roboto_light">
    	<item name="android:fontFamily">sans-serif-light</item>
    </style>
    
    
