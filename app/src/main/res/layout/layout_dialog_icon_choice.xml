<?xml version="1.0" encoding="utf-8"?>

<!-- Layout of icon choice from -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <TextView
        android:id="@+id/from_camera"
        android:layout_width="match_parent"
        android:layout_height="48dp"
		android:text="@string/login_camera"
		android:textSize="18sp"
		android:textColor="@drawable/text_color_pressed_selector"
		android:gravity="center"
		style="@style/roboto_light"
		android:background="@drawable/list_bg_top" />
    <ImageView
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#a0000000"/>
    <TextView
        android:id="@+id/from_gallery"
        android:layout_width="match_parent"
        android:layout_height="48dp"
		android:text="@string/login_from_gallery"
		android:textSize="18sp"
		android:textColor="@drawable/text_color_pressed_selector"
		android:gravity="center"
		style="@style/roboto_light"
		android:background="@drawable/list_bg_top" />
    <ImageView
        android:layout_height="10dp"
        android:layout_width="match_parent"
        android:background="#a0000000"/>
	<TextView
	    android:id="@+id/from_cancel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
		android:text="@android:string/cancel"
		android:textSize="18sp"
        android:textColor="@drawable/text_color_pressed_selector"
		android:gravity="center"
		style="@style/roboto_light"
		android:background="@drawable/list_bg_top" />

</LinearLayout>