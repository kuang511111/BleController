<?xml version="1.0" encoding="utf-8"?>

<com.jrdcom.wearable.smartband2.ui.view.RecentItemLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<TextView
        android:id="@+id/timestamp_text_view"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
            android:id="@+id/action_image"
            android:src="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <LinearLayout
                android:id="@+id/action_layout"
                android:orientation="vertical"
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:background="@drawable/recent_popup_walkingrunning_l"
                >

            <LinearLayout
                    android:id="@+id/action_type_layout"
                    android:orientation="horizontal"
                    android:paddingLeft="30dp"
                    android:paddingBottom="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="9dp"
                    android:gravity="left"

                    android:layout_width="153dp"
                    android:layout_height="wrap_content"
                    >

                <ImageView
                        android:id="@+id/action_type_image"
                        android:src="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/action_text_view"
                        android:paddingLeft="5dp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="#6e6e6e"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                    android:id="@+id/summery_text_view"
                    android:textSize="16sp"
                    style="@style/roboto_light"
                    android:textColor="#6e6e6e"
                    android:singleLine="false"
                    android:paddingBottom="0dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/kcal_text_view"

                    android:textColor="#6e6e6e"
                    android:paddingBottom="0dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp"
                    style="@style/roboto_light"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:id="@+id/heart_layout"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                    <ImageView
                            android:id="@+id/heart_image"
                            android:src="@drawable/recent_heartrate_heart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/heart_text_view"
                            android:paddingLeft="5dp"
                            style="@style/roboto_light"
                            android:textColor="#6e6e6e"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                </LinearLayout>
                <TextView
                        android:id="@+id/heart_detail_text_view"
                        android:visibility="gone"
                        style="@style/roboto_light"
                        android:textColor="#6e6e6e"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>



</com.jrdcom.wearable.smartband2.ui.view.RecentItemLayout>